# se ejecuta despuÃ©s de que el paquete se instala en el sistema
echo "Cloning repository ..."
mkdir  -p ${HOME}/.local/share/vcpkg
git clone   https://github.com/Microsoft/vcpkg.git \
${HOME}/.local/share/vcpkg
if [[ -d ${HOME}/.local/share/vcpkg ]]; then
echo "Compilando vcpkg ..."
  .${HOME}/.local/share/vcpkg 1> /dev/null
fi
  




