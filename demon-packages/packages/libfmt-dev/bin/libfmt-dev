#!/data/data/com.termux/files/usr/bin/bash

cd ${HOME}

printf  "[%d] Cloning repository...\n" $(echo $?)
git clone --recursive --progress  https://github.com/fmtlib/format-benchmark.git  2>/dev/null
cd format-benchmark 
printf  "[%d] Compilando proyecto....\n"
cmake . 
printf  "[%d] Compilando librerias"
if [ -d ${HOME}/format-benchmark/fmt ];
then
cd ${HOME}/format-benchmark/fmt
cmake --build . 
else
echo "Error"
exit 1
fi
