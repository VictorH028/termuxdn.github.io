#!/data/data/com.termux/files/usr/bin/bash

touch ${PREFIX}/tmp/i-haklab.log 
printf "A log was created in PREFIX/tmp/i-haklab.log\n"
cd ${HOME}
pv  ${PREFIX}/tmp/i-haklab.log | git clone --recursive --quiet  https://github.com/fmtlib/format-benchmark.git  2>/dev/null
printf  "[%d] Cloning repository...\n" $(echo $?)
cd format-benchmark 
cmake . &>/dev/null
if [ -d ${HOME}/format-benchmark/fmt ];
then
cd ${HOME}/format-benchmark/fmt
cmake --build . 
else
echo "Error"
exit 1
fi
printf "[%d] Compiling...\n" $(echo $?)
